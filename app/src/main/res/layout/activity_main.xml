<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/letter_spaced_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="مرحبا بالعالم!"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:letterSpacing="1"
        android:maxLines="1"
        android:textDirection="anyRtl"
        android:ellipsize="end"
        android:background="@android:color/holo_red_dark"
        app:layout_constraintBottom_toTopOf="@id/no_letter_spaced_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"/>

    <TextView
        android:id="@+id/no_letter_spaced_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="مرحبا بالعالم!"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:textDirection="anyRtl"
        android:ellipsize="end"
        android:background="@android:color/holo_green_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/letter_spaced_text" />

</androidx.constraintlayout.widget.ConstraintLayout>